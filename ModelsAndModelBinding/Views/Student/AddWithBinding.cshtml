@model Student
@{
    ViewData["Title"] = "AddWithBinding";
}

<h1>Add Student with ModelBinding</h1>

@if (ViewData["Message"] == null)
{
    <form method="post">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <small id="fullNameHelp" class="form-text text-muted">Please enter your full legal name.</small>
            <span asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" />
            <small id="dobHelp" class="form-text text-muted">Use the Date picker to pick a valid date.</small>
            <span asp-validation-for="DateOfBirth"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <small id="emailHelp" class="form-text text-muted">Enter your student email.</small>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <small id="phoneHelp" class="form-text text-muted">Enter your primary phone number.</small>
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Student</button>
    </form>
}
else
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@ViewData["Message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
} 
@model Student
@{
    ViewData["Title"] = "AddWithBinding";
}

<h1>Add Student with ModelBinding</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <small id="fullNameHelp" class="form-text text-muted">Please enter your full legal name.</small>
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" />
        <small id="dobHelp" class="form-text text-muted">M/D/YYYY</small>
        <span asp-validation-for="DateOfBirth"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <small id="emailHelp" class="form-text text-muted">Enter your student email.</small>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <small id="phoneHelp" class="form-text text-muted">Enter your primary phone number.</small>
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Student</button>
</form>
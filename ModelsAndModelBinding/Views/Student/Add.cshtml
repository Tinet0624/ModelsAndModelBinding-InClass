@{
    ViewData["Title"] = "Add new Student";
}

@if (ViewData["Added"] == null)
{
    <h1>Add new Student</h1>

    <form method="post">
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" name="full-name" class="form-control" id="fullName">
                <small id="fullNameHelp" class="form-text text-muted">Please enter your full legal name.</small>
            </div>
            <div class="form-group">
                <label for="DateOfBirth">Date of Birth</label>
                <input type="text" name="dob" class="form-control" id="DateOfBirth">
                <small id="dobHelp" class="form-text text-muted">M/D/YYYY</small>
            </div>
            <div class="form-group">
                <label for="email">Student Email</label>
                <input type="text" name="email" class="form-control" id="email">
                <small id="emailHelp" class="form-text text-muted">Enter your student email.</small>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" name="phone-number" class="form-control" id="phone">
                <small id="phoneHelp" class="form-text text-muted">Enter your home phone number.</small>
            </div>
            <button type="submit" class="btn btn-primary">Add Student</button>
    </form>
}
else
{
    // Can i put a view here??
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@ViewData["Added"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}